<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.sap.adt.views"
            class="com.abapblog.classicOutline.views.View"
            icon="platform:/plugin/org.eclipse.ui.views/icons/full/eview16/outline_co.png"
            id="com.abapblog.classicOutline.view"
            inject="false"
            name="Classic Outline"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.abapblog.classicOutline.views.LinkWithEditorHandler"
            description="Link With Editor"
            id="com.abapblog.classicOutline.LinkWithEditor"
            name="Link With Editor">
         <state
               class="com.abapblog.classicOutline.views.LinkWithEditorState"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.abapblog.classicOutline.LinkWithEditor"
            icon="platform:/plugin/org.eclipse.ui.ide/icons/full/elcl16/synced.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.abapblog.classicOutline.preferences.PreferenceInitilizer">
      </initializer>
   </extension>
   <extension
         point="com.sap.adt.destinations.logonListeners">
      <listener
            class="com.abapblog.classicOutline.views.View">
      </listener>
   </extension>
      <extension
         point="com.sap.adt.tools.abapsource.ui.processAfterSourcePageLoaded">
      <class
            name="com.abapblog.classicOutline.views.AbapPageLoadListener">
      </class>
   </extension>
      <extension
         point="com.sap.adt.activation.ui.activationSuccessListener">
      <onActivationSuccess
            class="com.abapblog.classicOutline.views.View">
      </onActivationSuccess>
   </extension>
</plugin>
